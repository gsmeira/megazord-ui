{
  "name": "megazord-ui",
  "version": "0.0.1",
  "private": true,
  "description": "A React UI component library with shadcn/ui design",
  "scripts": {
    "build": "pnpm --filter \"./packages/*\" --filter \"./apps/*\" run build",
    "test": "pnpm --filter \"./packages/*\" run test",
    "lint": "pnpm --filter \"./packages/*\" --filter \"./apps/*\" run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx}\"",
    "dev": "pnpm --filter playground run dev",
    "storybook": "pnpm --filter @megazord-ui/ui run storybook",
    "fresh": "rm -rf pnpm-lock.yaml node_modules packages/*/node_modules apps/*/node_modules && pnpm install"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
