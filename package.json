{
  "name": "megazord",
  "version": "0.0.1",
  "private": true,
  "description": "A React UI component library with shadcn/ui design",
  "scripts": {
    "build": "pnpm --filter \"./packages/*\" --filter \"./apps/*\" run build",
    "test": "pnpm --filter \"./packages/*\" run test",
    "lint": "pnpm --filter \"./packages/*\" --filter \"./apps/*\" run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx}\"",
    "dev": "concurrently \"pnpm run dev:ui\" \"pnpm run dev:playground\"",
    "dev:playground": "pnpm --filter playground run dev",
    "dev:ui": "pnpm --filter @megazord/ui run dev",
    "storybook": "pnpm --filter @megazord/ui run storybook",
    "fresh": "rm -rf pnpm-lock.yaml node_modules packages/*/node_modules packages/*/dist apps/*/node_modules apps/*/.next && pnpm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.22.0"
}
